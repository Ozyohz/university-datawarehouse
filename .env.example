# =============================================================================
# University Data Warehouse - Environment Variables
# =============================================================================
# Copy this file to .env and update the values as needed

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
PROJECT_NAME=university-datawarehouse
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=university_dw
POSTGRES_USER=datawarehouse
POSTGRES_PASSWORD=your_secure_password_here

# Airflow Metadata DB
AIRFLOW_DB=airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow_password

# -----------------------------------------------------------------------------
# Apache Airflow
# -----------------------------------------------------------------------------
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_webserver_secret_key
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=False

# Airflow Admin User
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@university.edu

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Bucket names
BRONZE_BUCKET=bronze
SILVER_BUCKET=silver
GOLD_BUCKET=gold

# -----------------------------------------------------------------------------
# Apache Spark
# -----------------------------------------------------------------------------
SPARK_MASTER=spark://spark-master:7077
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=4g
SPARK_EXECUTOR_CORES=2

# -----------------------------------------------------------------------------
# dbt
# -----------------------------------------------------------------------------
DBT_PROFILES_DIR=/opt/dbt
DBT_TARGET=dev

# -----------------------------------------------------------------------------
# Apache Superset
# -----------------------------------------------------------------------------
SUPERSET_SECRET_KEY=your_superset_secret_key
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@university.edu

# -----------------------------------------------------------------------------
# MLflow
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# -----------------------------------------------------------------------------
# Redis (for Celery)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Data Sources (Example configurations)
# -----------------------------------------------------------------------------
# Source Database 1 - Student Information System
SOURCE_SIS_HOST=source_db_host
SOURCE_SIS_PORT=5432
SOURCE_SIS_DB=student_info
SOURCE_SIS_USER=readonly_user
SOURCE_SIS_PASSWORD=source_password

# Source Database 2 - Financial System
SOURCE_FIN_HOST=source_db_host
SOURCE_FIN_PORT=5432
SOURCE_FIN_DB=finance
SOURCE_FIN_USER=readonly_user
SOURCE_FIN_PASSWORD=source_password

# -----------------------------------------------------------------------------
# Notifications
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.university.edu
SMTP_PORT=587
SMTP_USER=notifications@university.edu
SMTP_PASSWORD=smtp_password
ALERT_EMAIL=data-team@university.edu

# Slack (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
